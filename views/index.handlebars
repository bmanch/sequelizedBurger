<div id="container">

	<div id="marquee">
		<h1>Hamburger Lover's Heaven</h1>

		<img id="bigBurger" src="assets/img/hamburger_icon.png" alt="Big Burger">
	</div>

	<div id="uneaten">
		<h2>What needs Eaten'</h2>
		<h4>(Place Your Order)</h4>
		<ul>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li>
						{{this.burger_name}}
						<br>
						<form action="/{{this.id}}?_method=PUT" method="POST">
							<input type="hidden" name="devoured" value="1">
							<input type="text" id="customer" name="customer" placeholder="Your name">
							<input type="text" id="amount" name="number" placeholder="How many?">
							<button type="submit">Devour it!</button>
						</form>
					</li>
					<br>
				{{/unless}}
			{{/each}}
		</ul>
	</div>

	<div id="eaten">
		<h2>What's been Eaten</h2>
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						{{this.burger_name}}

						<form action="/{{this.id}}?_method=DELETE" method="POST">
							<button type="submit">Remove burger!</button>
						</form>
					</li>
					<br>
				{{/if}}
			{{/each}}
		</ul>
	</div>

	<div id="addABurger">
		<h2>Add a Hamburger</h2>
		<form class="updateForm" action="/" method="POST">
			<label for="burger">What shall we cook up next?</label>
			<br><br>
			<input type="text" id="burger" name="burgerName">
			{{!-- <input type="hidden" name="devoured" value="0"> --}}
			<br><br>
			<button type="submit">Cook it!</button>
		</form>
	</div>

	<div id="burgerEaters">
		<h2>Our Eaters</h2>
		<ul>
			{{#each customers}}
				<li>
					<strong>{{this.customer_name}}</strong>: consumed {{this.burgers_eaten}} burger(s)
					<form action="customers/{{this.id}}?_method=DELETE" method="POST">
						<button type="submit">Remove customer!</button>
					</form>
				</li>
				<hr>
			{{/each}}
		</ul>
	</div>
</div>